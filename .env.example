# Environment variables for Playwright automation
# Copy this file to .env and fill in your actual values

# Base URLs for different environments
BASE_URL_DEV=http://localhost:3000
BASE_URL_STAGING=https://staging.example.com
BASE_URL_PROD=https://example.com

# API Configuration
API_BASE_URL=https://api.example.com
API_TIMEOUT=30000

# Authentication (if needed)
USERNAME=your-username
PASSWORD=your-password
API_KEY=your-api-key
BEARER_TOKEN=your-bearer-token

# GitHub API (for API testing examples)
GITHUB_TOKEN=your-github-token

# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=30000
SLOW_MO=0

# Screenshot and Video Settings
TAKE_SCREENSHOTS=true
RECORD_VIDEO=false
FULL_PAGE_SCREENSHOTS=true

# Data Export Settings
EXPORT_FORMAT=json
EXPORT_DIRECTORY=./data/exports

# Scraping Configuration
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
REQUEST_DELAY_MIN=1000
REQUEST_DELAY_MAX=3000
MAX_RETRIES=3

# Debugging
DEBUG=false
VERBOSE_LOGGING=false
